{
  "name": "mini-language-server",
  "displayName": "Mini Language Server",
  "version": "0.0.1",
  "engines": {
    "vscode": ">=1.75.0"
  },
  "activationEvents": [
    "workspaceContains:**/*.{js,jsx,ts,tsx}",
    "onLanguage:typescript",
    "onLanguage:typescriptreact",
    "onLanguage:javascript",
    "onLanguage:javascriptreact"
  ],
  "main": "./out/extension.js",
  "type": "commonjs",
  "contributes": {
    "languages": [
      {
        "id": "typescript",
        "aliases": ["TypeScript", "ts"],
        "extensions": [".ts"]
      },
      {
        "id": "typescriptreact",
        "aliases": ["TypeScript React", "tsx"],
        "extensions": [".tsx"]
      },
      {
        "id": "javascript",
        "aliases": ["JavaScript", "js"],
        "extensions": [".js"]
      },
      {
        "id": "javascriptreact",
        "aliases": ["JavaScript React", "jsx"],
        "extensions": [".jsx"]
      }
    ],
    "commands": [
      {
        "command": "miniLanguageServer.showFileCount",
        "title": "Mini Language Server: Show File Count"
      },
      {
        "command": "miniLanguageServer.listFiles",
        "title": "Mini Language Server: List All Files"
      },
      {
        "command": "miniLanguageServer.showInputBox",
        "title": "Mini Language Server: Show Input Box",
        "category": "Mini Language Server"
      }
    ],
    "keybindings": [
      {
        "command": "miniLanguageServer.showInputBox",
        "key": "ctrl+shift+i",
        "mac": "cmd+shift+i"
      }
    ]
  },
  "scripts": {
    "clean": "rimraf out",
    "compile": "tsc -b",
    "watch": "tsc -b -w",
    "build": "npm run clean && npm run compile",
    "lint": "biome lint .",
    "format": "biome format . --write",
    "check": "biome check --apply ."
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "description": "",
  "dependencies": {
    "@anthropic-ai/sdk": "^0.32.1",
    "dotenv": "^16.4.5",
    "openai": "^4.73.0",
    "tree-sitter": "^0.21.1",
    "tree-sitter-javascript": "^0.23.1",
    "tree-sitter-typescript": "^0.23.2",
    "vscode-languageclient": "^9.0.1",
    "vscode-languageserver": "^9.0.1",
    "vscode-languageserver-textdocument": "^1.0.12",
    "vscode-uri": "^3.0.8"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@types/node": "^22.9.0",
    "@types/sinon": "^17.0.3",
    "@types/vscode": "^1.95.0",
    "rimraf": "^6.0.1",
    "sinon": "^19.0.2",
    "tsx": "^4.19.2",
    "typescript": "^5.6.3"
  }
}
