{
  "name": "mini-language-server",
  "displayName": "Mini Language Server",
  "version": "0.0.1",
  "engines": {
    "vscode": ">=1.75.0"
  },
  "activationEvents": ["onLanguage:plaintext", "onStartupFinished"],
  "main": "./out/extension.js",
  "type": "commonjs",
  "contributes": {
    "languages": [{
      "id": "plaintext",
      "aliases": ["Plain Text"],
      "extensions": [".js", ".ts", ".tsx", ".jsx"]
    }]
  },
  "scripts": {
    "compile": "tsc -b",
    "watch": "tsc -b -w",
    "build": "npm run clean && npm run compile",
    "lint": "biome lint .",
    "format": "biome format . --write",
    "check": "biome check --apply ."
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "description": "",
  "dependencies": {
    "@anthropic-ai/sdk": "^0.32.1",
    "dotenv": "^16.4.5",
    "openai": "^4.73.0",
    "vscode-languageclient": "^9.0.1",
    "vscode-languageserver": "^9.0.1",
    "vscode-languageserver-textdocument": "^1.0.12"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@types/node": "^22.9.0",
    "@types/sinon": "^17.0.3",
    "@types/vscode": "^1.95.0",
    "rimraf": "^6.0.1",
    "sinon": "^19.0.2",
    "tsx": "^4.19.2",
    "typescript": "^5.6.3"
  }
}
